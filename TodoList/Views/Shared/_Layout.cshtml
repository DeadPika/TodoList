    <div class="container-fluid" style="min-height: 100px">
        <div class="row w-100 align-items-center justify-content-between">
            <main role="main" class="row-100">
                <header class="d-flex align-items-center justify-content-between">
                    <div></div>
                    <h1 class="text-primary fw-bold text-center" style="font-size: 38px">
                        <i class="fa-solid fa-clipboard-list"></i> Список задач
                    </h1>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="Account/Logout" class="btn">
                            Выйти
                        </a>
                    }
                    else
                    {
                        <div></div>
                    }
                </header>
                @RenderBody()
            </main>

